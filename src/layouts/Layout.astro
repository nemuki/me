---
import { getCollection } from "astro:content";
import Profile from "../components/Profile.astro";
import { getGravatarDataUrl } from "../utils/getGravatar";

interface Props {
	/** 省略時は profile.name、渡すと「{title} - {profile.name}」 */
	title?: string;
	description?: string;
	/** Profile 全体をリンクで包む href（/bio ページ用） */
	profileLinkHref?: string;
}

const siteEntries = await getCollection("site");
const { profile } = siteEntries[0].data;

const gravatarEmail = import.meta.env.GRAVATAR_EMAIL as string | undefined;
const avatarUrl = gravatarEmail
	? ((await getGravatarDataUrl(gravatarEmail)) ?? profile.avatarUrl)
	: profile.avatarUrl;

const {
	title,
	description = `${profile.name} (${profile.nameJa}) - ${profile.role}`,
	profileLinkHref,
} = Astro.props;

const pageTitle = title ? `${title} - ${profile.name}` : profile.name;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {avatarUrl
      ? <link rel="icon" href={avatarUrl} />
      : <>
          <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
          <link rel="icon" href="/favicon.ico" />
        </>
    }
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <div class="container">
      <Profile
        name={profile.name}
        nameJa={profile.nameJa}
        jobTitle={profile.role}
        avatarUrl={avatarUrl}
        linkHref={profileLinkHref}
      >
        <slot name="profile-extra" />
      </Profile>
      <slot />
    </div>
  </body>
</html>

<style is:global>
  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

  :root {
    --bg: #f5f5f5;
    --surface: #ffffff;
    --text: #111111;
    --text-sub: #666666;
    --border: #e5e5e5;
    --card-radius: 12px;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --bg: #111111;
      --surface: #1e1e1e;
      --text: #f0f0f0;
      --text-sub: #999999;
      --border: #2e2e2e;
    }
  }

  body {
    background: var(--bg);
    color: var(--text);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    min-height: 100svh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24px 16px;
  }

  .container {
    width: 100%;
    max-width: 860px;
    display: grid;
    grid-template-columns: 220px 1fr;
    gap: 24px;
    align-items: start;
  }

  @media (max-width: 640px) {
    .container {
      grid-template-columns: 1fr;
    }
  }
</style>
