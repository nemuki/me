---
import { getCollection, render } from "astro:content";
import Profile from "../components/Profile.astro";
import Layout from "../layouts/Layout.astro";
import { getGravatarDataUrl } from "../utils/getGravatar";

const siteEntries = await getCollection("site");
const { profile } = siteEntries[0].data;

const bioEntries = await getCollection("bio");
const bio = bioEntries[0];
const { Content: BioContent } = bio ? await render(bio) : { Content: null };

const gravatarEmail = import.meta.env.GRAVATAR_EMAIL as string | undefined;
const avatarUrl = gravatarEmail
	? ((await getGravatarDataUrl(gravatarEmail)) ?? profile.avatarUrl)
	: profile.avatarUrl;
---

<Layout
	title={`Bio - ${profile.name}`}
	description={`${profile.name} (${profile.nameJa}) - ${profile.role}`}
	faviconUrl={avatarUrl}
>
	<div class="container">

		<!-- Profile -->
		<Profile name={profile.name} nameJa={profile.nameJa} jobTitle={profile.role} avatarUrl={avatarUrl} linkHref="/" />

		<!-- Bio -->
		<main class="bio-main">
			<a href="/" class="back-link">‚Üê Back</a>
			{BioContent && (
				<div class="bio-content">
					<BioContent />
				</div>
			)}
		</main>

	</div>
</Layout>

<style>
	.container {
		width: 100%;
		max-width: 860px;
		display: grid;
		grid-template-columns: 220px 1fr;
		gap: 24px;
		align-items: start;
	}

	.bio-main {
		display: flex;
		flex-direction: column;
		gap: 20px;
	}

	.back-link {
		font-size: 0.85rem;
		color: var(--text-sub);
		text-decoration: none;
	}

	.back-link:hover {
		color: var(--text);
		text-decoration: underline;
	}

	.bio-content {
		font-size: 0.9rem;
		line-height: 1.75;
		color: var(--text);
	}

	.bio-content :global(h2) {
		font-size: 1rem;
		font-weight: 600;
		margin-bottom: 12px;
	}

	.bio-content :global(h3) {
		font-size: 0.9rem;
		font-weight: 600;
		margin-bottom: 6px;
		margin-top: 16px;
	}

	.bio-content :global(p) {
		color: var(--text-sub);
		margin-bottom: 8px;
	}

	.bio-content :global(ul) {
		padding-left: 1.2em;
		color: var(--text-sub);
	}

	.bio-content :global(hr) {
		border: none;
		border-top: 1px solid var(--border);
		margin: 20px 0;
	}

	@media (max-width: 640px) {
		.container {
			grid-template-columns: 1fr;
		}
	}
</style>
