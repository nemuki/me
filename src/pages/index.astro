---
import { getCollection } from "astro:content";
import LinkCard from "../components/LinkCard.astro";
import Layout from "../layouts/Layout.astro";

const siteEntries = await getCollection("site");
const { sections } = siteEntries[0].data;
---

<Layout>
  <a slot="profile-extra" href="/bio" class="bio-link">Bio â†’</a>

  <!-- Link sections -->
  <main class="sections">
    {sections.map((section) => (
      <section>
        <p class="section-title">{section.title}</p>
        {section.content && (
          <p class="section-content">{section.content}</p>
        )}
        {section.links && (
          <div class="card-grid">
            {section.links.map((link) => (
              <LinkCard {...link} />
            ))}
          </div>
        )}
      </section>
    ))}
  </main>
</Layout>

<style>
  .sections {
    display: flex;
    flex-direction: column;
    gap: 28px;
  }

  .section-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 10px;
  }

  .section-content {
    font-size: 0.9rem;
    line-height: 1.75;
    color: var(--text-sub);
    margin-bottom: 12px;
    white-space: pre-line;
  }

  .bio-link {
    font-size: 0.85rem;
    color: var(--text-sub);
    text-decoration: none;
    margin-top: 4px;
  }

  .bio-link:hover {
    color: var(--text);
    text-decoration: underline;
  }
</style>
